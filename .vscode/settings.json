{
    "cSpell.words": [],
    "code-runner.executorMap": {
        "c": "make && ./$fileNameWithoutExt.out"
    },
    "clang-tidy.compilerArgs": [
        "-std=c99",
        "-Wall",
        "-Werror",
        "-g",
        "-lm",
    ],
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "files.associations": {
        "stdio.h": "c"
    },
}